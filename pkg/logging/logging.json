{
  "moduleName": "logging",
  "enabled": true,
  "level": "info",
  "format": "json",
  "output": "stdout",
  "filePath": "/var/log/app.log",
  "maxSize": 100,
  "maxBackups": 3,
  "maxAge": 28,
  "compress": true,
  "skipPaths": [
